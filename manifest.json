{

  "manifest_version": 2,
  "name": "Tab Surfer",
  "version": "1.0",

  "description": "Search through your open tabs",

  "icons": {
    "48": "icons/border-48.png"
  },

  "browser_action": {
    "browser_style": true,
    "default_title": "Tab Surfer",
    "default_popup": "surfer.html"
  },

  "commands": {
    "_execute_browser_action": {
       "suggested_key": {
         "default": "Ctrl+E",
         "mac": "Command+E",
         "linux": "Ctrl+Q"
       }
    }
  },

  "permissions": [
    "tabs",
    "bookmarks"
  ]

}
